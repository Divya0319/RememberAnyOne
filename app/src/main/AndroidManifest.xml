<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fastturtle.rememberme">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.fastturtle.rememberMe.activities.DashBoardActivity"
            android:noHistory="true">
        </activity>
        <activity
            android:name="com.fastturtle.rememberMe.activities.StartingActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.fastturtle.rememberMe.activities.AllUsersListActivity"
            android:theme="@style/ListViewTheme" />
        <activity
            android:name="com.fastturtle.rememberMe.activities.AddUserActivity"
            android:theme="@style/DashBoardTheme" />
        <activity
            android:name="com.fastturtle.rememberMe.activities.UpdateUserActivity"
            android:theme="@style/AppBaseTheme" />

    </application>

</manifest>