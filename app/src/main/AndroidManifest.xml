<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fastturtle.RememberAnyOne">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28"/>

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppBaseTheme">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.fastturtle.RememberAnyOne.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>

        </provider>
        <activity
            android:name="com.fastturtle.RememberAnyOne.activities.DashBoardActivity"
            android:noHistory="true"
            android:exported="true"
            android:screenOrientation="locked"
            android:theme="@style/Theme.App.Starting" >
                    <intent-filter>
                        <action android:name="android.intent.action.MAIN" />

                        <category android:name="android.intent.category.LAUNCHER" />
                    </intent-filter>
        </activity>
        <activity
            android:name="com.fastturtle.RememberAnyOne.activities.StartingActivity"
            android:screenOrientation="locked"
            android:theme="@style/SplashTheme"
            >
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>

        <activity
            android:name="com.fastturtle.RememberAnyOne.activities.AllUsersListActivity"
            android:screenOrientation="locked"
            android:theme="@style/ListViewTheme" />
        <activity
            android:name="com.fastturtle.RememberAnyOne.activities.AddUserActivity"
            android:screenOrientation="locked"
            android:theme="@style/DashBoardTheme" />
        <activity android:name="com.fastturtle.RememberAnyOne.activities.UpdateUserActivity" />

    </application>

</manifest>